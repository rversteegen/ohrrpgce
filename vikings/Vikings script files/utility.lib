script, In Area, Locationx, Locationy, ToX, ToY, begin
variable (hx)
variable (hy)

hx := herox (me)
hy := heroy (me)

return ( (hx >= LocationX) && (hx <= ToX) && (hy >= Locationy) && (hy <= ToY) )
end

#---------------------------------------------------------------------------------------------------------------------------

script, In Area2, Locationx, Locationy, Rightx, Downy, begin
variable (hx)
variable (hy)
variable (ToX)
variable (ToY)

ToX := Locationx + Rightx
ToX := Locationy + Downy

hx := herox (me)
hy := heroy (me)
return ( (hx >= LocationX) && (hx <= ToX) && (hy >= Locationy) && (hy <= ToY) )
end

