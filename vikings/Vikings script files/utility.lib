script, Delete Spell, Hero, List, Spell, begin
variable (slot)
variable (check)
check := 1

if (knows spell (hero, Spell)) then (

	while (slot <= 23) do (
		check := read spell (hero, list, slot)
		if (check == spell) then (
			write spell (hero, list, slot, none)
		)
		slot += 1
	)
)
end

