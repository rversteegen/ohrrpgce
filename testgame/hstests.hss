  append number(2, 65, -4)       , $3="65  ", assert(check())
  append number(2, 65, -4, true) , $3="65  ", assert(check())
  append number(2, -65, -4)      , $3="-65 ", assert(check())
  append number(2, -65, -4)      , $3="-65 ", assert(check())
