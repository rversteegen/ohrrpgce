script, hsd:save string, hsd:id, begin
  variable (hsd:sl)
  hsd:sl := create text
  set slice visible(hsd:sl, false)
  set slice text(hsd:sl, hsd:id)
  clear string(hsd:id)
  return (hsd:sl)
end

script, hsd:restore string, hsd:id, hsd:saved, begin
  get slice text(hsd:id, hsd:saved)
  free slice(hsd:saved)
end

