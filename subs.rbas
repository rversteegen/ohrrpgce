SUB formation_editor
 DIM menu(2) as string
 menu(0) = "Return to Main Menu"
 menu(1) = "Edit Individual Formations..."
 menu(2) = "Construct Formation Sets..."

 DIM state as MenuState
 state.size = 24
 state.last = UBOUND(menu)

 setkeys
